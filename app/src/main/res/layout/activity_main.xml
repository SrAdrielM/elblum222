<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/icRegresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/ic_regresar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <Button
        android:id="@+id/btnMedeicamento"
        android:layout_width="137dp"
        android:layout_height="53dp"
        android:backgroundTint="#36A1FF"
        android:text="nuevo medicamento"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.926"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="660dp"
        android:translationY="70dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="sans-serif-light"
                android:text="ingresa los respectivos datos para poder agregar un nuevo paciente"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtNombresPaciente"
                android:layout_width="391dp"
                android:layout_height="50dp"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/border"
                android:ems="10"
                android:hint="Nombres"
                android:inputType="text"
                android:paddingStart="10dp" /> <!-- Borde agregado -->

            <EditText
                android:id="@+id/txtApellidos"
                android:layout_width="391dp"
                android:layout_height="53dp"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/border"
                android:ems="10"
                android:hint="Apellidos"
                android:inputType="text"
                android:paddingStart="10dp" /> <!-- Borde agregado -->

            <EditText
                android:id="@+id/txtEdad"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/border"
                android:ems="10"
                android:hint="Edad"
                android:inputType="number"
                android:paddingStart="10dp" />

            <EditText
                android:id="@+id/txtNacimiento"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/border"
                android:ems="10"
                android:hint="Fecha de nacimiento"
                android:inputType="text"
                android:paddingStart="10dp" /> <!-- Borde agregado -->

            <EditText
                android:id="@+id/txtEnfermedad"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/border"
                android:ems="10"
                android:hint="Enfermedad"
                android:inputType="text"
                android:paddingStart="10dp" /> <!-- Borde agregado -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"> <!-- Borde agregado -->

                <EditText
                    android:id="@+id/txtHabitacion"
                    android:layout_width="186dp"
                    android:layout_height="35dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:hint="Numero de habitacion"
                    android:inputType="number"
                    android:paddingStart="10dp" /> <!-- Borde agregado -->

                <EditText
                    android:id="@+id/txtCama"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:hint="Numero de cama"
                    android:inputType="number"
                    android:paddingStart="10dp" /> <!-- Borde agregado -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="279dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Asigna medicamentos:"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"> <!-- Borde agregado -->

                    <Spinner
                        android:id="@+id/spnMedicamento1"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cada: "
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/txtHoraMed1"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="lapso de tiempo"
                        android:inputType="text" /> <!-- Borde agregado -->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:text="si hay mas medicamentos por asignar, escribelos aqui junto a sus tiempos" />

                <EditText
                    android:id="@+id/txtMedicamentosExtras"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="favor si no se pone medicamento poner ¨nada ¨ para el buen funcionamiento de la app"
                    android:inputType="textMultiLine"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnAgregarPaciente"
                android:layout_width="139dp"
                android:layout_height="63dp"
                android:backgroundTint="#36A1FF"
                android:text="Agregar"
                android:textSize="20sp"
                android:translationX="132dp" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>