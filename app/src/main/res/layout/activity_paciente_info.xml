<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Informacion del paciente:"
        android:textAlignment="viewEnd"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtNombresShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="Nombres"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtApellidosShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="Apellidos"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtEdadShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="Edad"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtNacimientoShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="Fecha de Nacimiento"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtEnfermedadShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="Enfermedad"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtHabitacionShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="Número de Habitación"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtCamaShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="Número de Cama"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="Tratamiento:"
        android:textAlignment="viewEnd"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtMedicamento1Show"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="Medicamento"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtHoraMed1Show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_weight="1"
            android:text="Cada 00 horas"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtInfoExtraShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:background="@drawable/border"
        android:text="Info adicional"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"/>

</LinearLayout>